<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>

    <style name="custom_dialog_style" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogTitle">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="custom_dialog_style2" parent="@android:style/Theme.Holo.Dialog">
        <item name="windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/DialogTitle2</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogTitle2">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>